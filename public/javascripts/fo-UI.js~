/*
*通用前端js部分
*UI
*/

//为加快UI.js的载入速度
$(document).ready(function(){

/*
*页头下拉菜单
*/

var $down_select = $("#down_select");
var $account = $("#account");

$down_select.hide();
$account.bind("mouseover", function(){
   $down_select.show();
});
$account.bind("mouseout", function(){
   $down_select.hide();
});
//隐藏下拉citylist
var $citylist = $("#city .citylist");
$citylist.hide();
//显示出citylist
$("#select_city").bind("click", function(){
   $citylist.show();
});
//点击取消，隐藏citylist
$("#s_cancl").bind("click", function(){
   $citylist.hide();
});

/*
*#left元素最小高度控制
*/
function minHeight(){
   var s = $("#left");
   var left = s.css("height");
   //alert(left);
   if(left){
      var leftNum = parseInt(left);
      if(leftNum < 540){
         s.css("height", 540);
      }
   }
}
//minHeight();

/*
控制首页index.html的不同UI样式
*/
function indexUI(){
  var $container = $("#container");
  var $header = $("#header");
  var $introduce = $("#sofamap_introduce");
  
  //获取window宽度
  var winWidth = $(window).width();
  //设置向左位移
  var moveLeft = (960 - winWidth)/2;
  var winHeight =  $(window).height();
  alert(winHeight);
  var toCut = parseInt($header.css("height")) + parseInt($introduce.css("height"));
  alert(toCut);
  var usedHeight = winHeight - toCut;
  
  $container.css("left", moveLeft);
  $container.css("width", winWidth);
  $container.css("height", usedHeight);
  $("#contain").css("marginTop", 0);
}
indexUI();

});













