/*
*个人页面里的一些前端逻辑
*/

$(document).ready(function(){

/*master沙发图片页面，删除一个图片*/
$(".delete").bind("click", function(){
   var sir = $(this).siblings("a").attr("href");
   $.post(
      "/delete_img", 
      {href : sir}, 
      function(data, status){
         if(data){
            window.location.reload();
         }
      }
   );
});

//上传头像时，获取头像的长和宽，后端裁切需要
var $path = $("#choose_image input");

$("#choose_image h1").bind("click", function(){
   alert($path.val());
   var image = new Image();
   image.src = $path.val();
   alert(image.width);
});


});
